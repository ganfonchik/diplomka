<Page x:Class="Diplomka.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Diplomka"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="settipage">

    <Grid Background="AliceBlue">
        <StackPanel Width="300" Margin="10">
            <TextBlock Text="Настройки" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>

            <TextBlock Text="COM-порт"/>
            <ComboBox x:Name="PortCombo" Margin="0,4,0,8"/>

            <TextBlock Text="Baud rate"/>
            <TextBox x:Name="BaudText" Text="9600" Margin="0,4,0,8"/>

            <StackPanel Orientation="Horizontal" Margin="0,4,0,8">
                <TextBlock Text="Симуляция" VerticalAlignment="Center" Margin="0,0,8,0"/>
                <CheckBox x:Name="SimulateCheck" VerticalAlignment="Center"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,8,0,8">
                <Button x:Name="ConnectBtn" Content="Connect" Width="80" Click="ConnectBtn_Click" Margin="0,0,8,0"/>
                <Button x:Name="DisconnectBtn" Content="Disconnect" Width="80" Click="DisconnectBtn_Click"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,8,0,8">
                <Button x:Name="SaveBtn" Content="Save" Width="80" Click="SaveBtn_Click" Margin="0,0,8,0"/>
                <Button x:Name="ClearBtn" Content="Clear history" Width="120" Click="ClearBtn_Click"/>
            </StackPanel>

            <TextBlock x:Name="StatusText" Text="" Foreground="Gray" Margin="0,8,0,0"/>
        </StackPanel>
    </Grid>
</Page>
