<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" x:Class="Diplomka.MainWindow"
        Title="Система сбора данных" Height="500" Width="900">
    <Grid>
        <!-- Боковое меню -->
        <StackPanel Orientation="Vertical" Width="150" Background="LightGray" Margin="10,0,740,0">
            <Button Content="Главная" Margin="5" Click="Button_Click_1"/>
            <Button Content="Настройки" Margin="5" Click="Button_Click"/>
            <Button Content="Лог" Margin="5"/>
        </StackPanel>

        <!-- Основная область -->
        <Grid Margin="160,0,10,20" x:Name="MainContentGrid">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Ряд для карточек -->
                <RowDefinition Height="*"/>
                <!-- Ряд для графика -->
            </Grid.RowDefinitions>

            <!-- Карточки датчиков -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10" Grid.Row="0">
                <Border BorderBrush="Gray" BorderThickness="1" Padding="10" Margin="5">
                    <StackPanel>
                        <TextBlock Text="Температура" FontWeight="Bold"/>
                        <TextBlock x:Name="TempCard" Text="0 °C" FontSize="16"/>
                    </StackPanel>
                </Border>
                <Border BorderBrush="Gray" BorderThickness="1" Padding="10" Margin="5">
                    <StackPanel>
                        <TextBlock Text="Влажность" FontWeight="Bold"/>
                        <TextBlock x:Name="HumidityCard" Text="0 %" FontSize="16"/>
                    </StackPanel>
                </Border>
                <Border BorderBrush="Gray" BorderThickness="1" Padding="10" Margin="5">
                    <StackPanel>
                        <TextBlock Text="CO₂" FontWeight="Bold"/>
                        <TextBlock x:Name="Co2Card" Text="0 ppm" FontSize="16"/>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- Место для графика / навигации -->
            <Grid Grid.Row="1">
                <Frame x:Name="ContentFrame" NavigationUIVisibility="Hidden" />
                <DataGrid x:Name="SensorTable" Visibility="Collapsed" AutoGenerateColumns="True" IsReadOnly="True"
                          Background="White" Panel.ZIndex="1"/>
            </Grid>
        </Grid>
        <materialDesign:Chip Content="Chip" Margin="993,102,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
